{
  "name": "serverless-esbuild-layers",
  "version": "0.2.0-rc",
  "author": {
    "name": "Alice Sheather",
    "email": "alice@beforeyoubid.com.au",
    "url": "https://github.com/alice-byb"
  },
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "default": "./dist/es/index.mjs",
      "import": "./dist/es/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "type": "module",
  "scripts": {
    "test": "jest --coverage --passWithNoTests",
    "lint": "eslint '**/*.{ts,tsx,js,jsx}' --max-warnings 0",
    "ts": "tsc --noEmit",
    "build-and-publish": "npm run build && npm publish --access public",
    "build-and-publish-dryrun": "npm run build && npm publish --dry-run",
    "build-and-publish-dryrun-ci": "npm run build && npm publish --registry http://localhost:4873",
    "build": "rimraf dist && npm run build:types && npm run build:js && npm run clean",
    "clean": "del dist/**/__tests__/*",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "npm run build:js:cjs && npm run build:js:esm",
    "build:js:cjs": "babel src/*.ts --out-dir dist --out-file-extension='.cjs' --extensions \".ts,.tsx\" --source-maps inline",
    "build:js:esm": "babel src/*.ts --no-babelrc --out-dir dist/es --out-file-extension='.mjs'  --extensions \".ts,.tsx\" --config-file=./.babelrc.es --source-maps inline"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beforeyoubid/serverless-esbuild-layers.git"
  },
  "keywords": [
    "serverless",
    "aws",
    "lambda",
    "layers",
    "esbuild"
  ],
  "bugs": {
    "url": "https://github.com/beforeyoubid/serverless-esbuild-layers/issues"
  },
  "homepage": "https://github.com/beforeyoubid/serverless-esbuild-layers#readme",
  "devDependencies": {
    "@babel/cli": "7.24.7",
    "@babel/core": "7.24.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "7.24.7",
    "@babel/preset-typescript": "7.24.7",
    "@swc/core": "1.5.25",
    "@swc/jest": "0.2.36",
    "@types/jest": "29.5.12",
    "@types/node": "20.14.2",
    "@types/pascalcase": "^1.0.1",
    "@types/serverless": "3.12.22",
    "@typescript-eslint/eslint-plugin": "5.59.0",
    "@typescript-eslint/parser": "5.59.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-plugin-transform-rewrite-imports": "^1.2.0",
    "core-js": "3.37.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-avoid-jest-spy-on": "^0.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "jest-junit": "16.0.0",
    "prettier": "^2.8.7",
    "serverless": "^3",
    "ts-node": "^10.9.1",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "del": "7.1.0",
    "esbuild": "0.21.4",
    "esbuild-node-externals": "1.13.1",
    "glob": "10.4.1",
    "is-builtin-module": "4.0.0",
    "minify-all-js": "^0.1.9",
    "pascalcase": "2.0.0"
  },
  "resolutions": {
    "strip-ansi": "6.0.1",
    "string-width": "4.2.2",
    "wrap-ansi": "7.0.0"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.[jt]s?(x)"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    }
  }
}
