{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",

    "declaration": true,

    "outDir": "./dist",

    "strict": true,
    "noImplicitAny": true,

    "types": ["jest", "serverless"],
    "typeRoots": ["./node_modules/@types"],

    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "**/examples/*"]
}
